{
  "name": "Channel Chat",
  "short_name": "Channel",
  "start_url": "/",
  "display": "fullscreen",
  "description": "Channel - a simple, modern chatroom-based messaging app for real-time conversations. Join and connect instantly.",
  "lang": "en",
  "dir": "auto",
  "theme_color": "#3B82F6",
  "background_color": "#ffffff",
  "orientation": "any",
  "icons": [
    {
      "src": "/static/images/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/static/images/manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/static/images/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/static/images/manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots":[
    {
       "src":"/static/images/screenshot1.png",
       "sizes":"992x1280",
       "type":"image/png"
    },
    {
       "src":"/static/images/screenshot2.png",
       "sizes":"392x860",
       "type":"image/png",
       "form_factor":"wide"
    }
 ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://www.microsoft.com/store/apps/your-app-url"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Go to Dashboard",
      "url": "/dashboard.html",
      "description": "Quickly navigate to the user dashboard."
    },
    {
      "name": "Settings",
      "url": "/settings.html",
      "description": "Quick access to app settings."
    }
  ],
  "file_handlers": [
    {
      "action": "The url you would like to open when the user chooses to share an image to your app. This URL must have code to process the returned image.",
      "accept": {
        "image/*": [".png", ".jpg", ".jpeg", ".webp"]
      }
    }
  ]
}
